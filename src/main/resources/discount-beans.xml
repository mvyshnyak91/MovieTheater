<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="birthdayStrategy" class="ua.vyshnyak.services.strategies.impl.BirthdayStrategy"/>
    <bean name="everyNthTicketStrategy" class="ua.vyshnyak.services.strategies.impl.EveryNthTicketStrategy"/>
    <bean name="discountService" class="ua.vyshnyak.services.impl.DiscountServiceImpl">
        <constructor-arg>
            <list>
                <ref bean="birthdayStrategy" />
                <ref bean="everyNthTicketStrategy" />
            </list>
        </constructor-arg>
    </bean>
</beans>